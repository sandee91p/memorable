<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="monospace"
            android:textSize="14sp"
            android:text="Status..."
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/editTextPkg"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Pkg Name."
                tools:ignore="Autofill" />

            <Button
                android:id="@+id/clone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="monospace"
                android:text="Clone App"
                android:textColor="#B300FF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/install"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="monospace"
                android:text="Install App"
                android:textColor="#B300FF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/start"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="monospace"
                android:text="Start App"
                android:textColor="#FFB300"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/stop"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="monospace"
                android:text="Stop App"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/uninstall"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="monospace"
                android:text="Uninstall App"
                android:textColor="#F1F1F1"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>



        <TextView
            android:id="@+id/systemLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="monospace"
            android:text="System Log..."
            android:textSize="14sp" />


    </LinearLayout>
</ScrollView>